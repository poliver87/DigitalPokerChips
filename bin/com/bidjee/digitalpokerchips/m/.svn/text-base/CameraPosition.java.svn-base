package com.bidjee.digitalpokerchips.m;

public class CameraPosition {
	
	private float x;
	private float y;
	float zoomFactor;
	
	String tag;
	
	public CameraPosition(String tag) {
		zoomFactor=1;
		this.tag=tag;
	}
	
	public void set(float x_,float y_,float zoomFactor_) {
		x=x_;
		y=y_;
		zoomFactor=zoomFactor_;
	}

	public float getY() {
		return y;
	}

	public float getX() {
		return x;
	}

	public float getZoomFactor() {
		return zoomFactor;
	}
	
	@Override
	public String toString() {
		return tag;
	}

}
